{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server --watch ./mocks/mock-server-data.json",
    "generate:tsv": "npm run ts ./src/main.cli.ts -- --generate 100 ./mocks/test-data.tsv http://localhost:3000/api",
    "import:tsv": "npm run ts ./src/main.cli.ts -- --import ./mocks/test-data.tsv admin test 127.0.0.1 six-cities salt"
  },
  "devDependencies": {
    "@types/convict": "^6.1.4",
    "@types/convict-format-with-validator": "^6.0.3",
    "@types/cors": "2.8.15",
    "@types/express": "^4.17.20",
    "@types/got": "^9.6.12",
    "@types/mime-types": "^2.1.3",
    "@types/multer": "^1.4.9",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.3",
    "nodemon": "3.0.1",
    "pino-pretty": "^10.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.6.2",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.5.0",
    "chalk": "^5.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "got": "^13.0.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "jose": "5.0.1",
    "mime-types": "^2.1.35",
    "mongoose": "^7.5.4",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.15.3",
    "reflect-metadata": "^0.1.13"
  }
}
